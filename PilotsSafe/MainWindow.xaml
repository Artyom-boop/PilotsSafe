<Window x:Class="PilotsSafe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="Auto" Width="Auto">
    <DockPanel >
        <ToolBar  DockPanel.Dock="Top"  VerticalAlignment="Top">
            <TextBlock Margin="2" FontSize="16">Number of moves:</TextBlock>
            <TextBlock x:Name="textBlock" Margin="2" FontSize="16">0</TextBlock>
            <TextBlock Margin="2" FontSize="16">Enter the size of the field:</TextBlock>
            <TextBox Margin="2" FontSize="16" x:Name="textBox" >4</TextBox>
            <Button Margin="2" FontSize="16" Background="Orange" Content="Change" Click="ChangeSizeField"/>
        </ToolBar>
        <UniformGrid DockPanel.Dock="Top" x:Name="grid" VerticalAlignment="Bottom">
        </UniformGrid>
    </DockPanel>
</Window>